<% if @title.present? %>
   <section class="bg-white">
      <div class="mb-6">

         <div class="border-stroke border-dark-3 items-center justify-between border-b md:flex">

            <div class="mb-6 w-full">
               <h1 class="text-green-700 mb-2 text-2xl font-semibold">
                  <%= @title %>
               </h1>
               <p class="text-green-700 text-sm font-medium">
                  <%= @description %>
               </p>
            </div>

            <% if @bt_label.present? %>
               <%= link_to @bt_path, class: "btn-primary mb-6 whitespace-nowrap inline-flex items-center justify-center gap-2" do %>
                  <%= icon('fa-solid', 'plus') %>
                  <span class="text-sm leading-none"><%= @bt_label %></span>
               <% end %>
            <% end %>

         </div>

      </div>
   </section>
<% end %>
