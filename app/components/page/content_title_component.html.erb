<% if @title.present? %>
   <section class="bg-white">

      <div class="mb-6">

         <div class="border-stroke border-dark-3 items-center justify-between border-b md:flex">

            <div class="mb-6 w-full">
               <h1 class="text-green-700 mb-2 text-2xl font-semibold">
                  <%= @title %>
               </h1>
               <p class="text-green-700 text-sm font-medium">
                  <%= @description %>
               </p>
            </div>

            <% if @with_buttons %>
               <%= link_to @bt_path, class: "text-white mb-6 bg-green-700 hover:bg-green-800 whitespace-nowrap font-medium rounded-lg text-sm px-5 py-2.5 inline-flex items-center" do %>
                  <%= icon('fa-solid', 'plus', class: "w-4 h-4 mr-2 flex-shrink-0") %>
                  <span class="leading-none mb-1"><%= @bt_label %></span>
               <% end %>
         <% end %>

         </div>

      </div>

   </section>
<% end %>
