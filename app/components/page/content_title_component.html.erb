<% if @title.present? %>
   <section class="bg-white">

      <div class="mb-6">

         <div class="border-stroke border-dark-3 items-center justify-between border-b md:flex">

            <div class="mb-6 w-full">
               <h1 class="text-green-700 mb-2 text-2xl font-semibold">
                  <%= @title %>
               </h1>
               <p class="text-green-700 text-sm font-medium">
                  <%= @description %>
               </p>
            </div>

            <% if @with_button %>
               <div class="mb-6">
                  <button class="bg-green-700 inline-flex items-center justify-center rounded py-[10px] px-5 text-sm font-medium text-white hover:bg-opacity-90">
                     Add New Item
                     <span class="pl-2">
                        <%= icon('fa-solid', 'plus', class: "w-5 h-5 text-green-500 transition duration-75 dark:text-green-700") %>
                     </span>
                  </button>
               </div>
            <% end %>

         </div>

      </div>

   </section>
<% end %>