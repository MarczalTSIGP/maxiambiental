<div class="text-sm font-medium text-center text-gray-500">
   <ul class="flex flex-wrap -mb-px" id="tabs">
      <% @tabs.each do |tab| %>
         <li class="me-2" id="tab-<%= tab[:name] %>">
            <%= active_link_to tab[:name], tab[:path], 
                                  class: "tab",
                                  class_active: "text-white bg-green-700 hover:bg-green-800",
                                  active: tab.fetch(:active, :exclusive),
                                  data: { "turbo-preserve-scroll" => true } %>
         </li>
      <% end %>
   </ul>
</div>