<div class="mx-auto">
   <div class="box-border flex flex-col items-center justify-center px-4" data-controller="carousel">

      <!-- Section Header -->
      <h2 class="text-2xl self-start font-bold text-gray-800 mb-6"><%= CourseClass.model_name.human.pluralize %></h2>
      <hr class="w-full border-gray-200 mb-6">

      <!-- Card Carousel -->
      <div class="card-wrapper relative w-full max-w-7xl" id="carousel-classes">

         <button class="carousel-prev absolute -left-1 md:-left-4 top-1/2 -translate-y-1/2 z-20 btn-rounded bg-green-700 text-white"
              data-carousel-target="prevButton"
              data-action="click->carousel#prev">
            <%= icon('fa-solid', 'arrow-left')%>
         </button>

         <button class="carousel-next absolute -right-1 md:-right-4 top-1/2 -translate-y-1/2 z-20 btn-rounded bg-green-700 text-white"
              data-carousel-target="nextButton"
              data-action="click->carousel#next">
            <%= icon('fa-solid', 'arrow-right')%>
         </button>

         <ul data-carousel-target="carousel" data-action="touchstart->carousel#handleTouchStart touchend->carousel#handleTouchEnd"
            class="card-list scrollbar-hide flex overflow-x-auto snap-x snap-mandatory scroll-smooth gap-4 md:gap-6 pb-4 scrollbar-hide">

            <% if @course.course_classes.present? %>
               <%= render partial: 'courses/partials/course_class', collection: @course.course_classes, as: :course_class %>
            <% else %>
               <div class="flex items-center justify-center w-full">
                  <%= render partial: 'shared/no_results' %>
               </div>
            <% end %>

         </ul>
      </div>
   </div>
</div>
