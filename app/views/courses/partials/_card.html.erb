<article id="course-<%= course.id %>-card" class="group relative h-96 w-full overflow-hidden rounded-xl bg-transparent shadow-lg transition-all duration-300 hover:shadow-xl hover:scale-[1.02]">

   <div class="relative h-full overflow-hidden">
      <%= image_tag course.image_url, alt: course.name,
                    class: 'h-full w-full object-cover object-center transition-transform duration-300 group-hover:scale-105' %>

      <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent"></div>
   </div>

   <div class="absolute bottom-0 left-0 w-full h-80 translate-y-[65%] transform space-y-2 rounded-t-xl bg-white p-5 transition-transform duration-300 group-hover:translate-y-0">
      <div class="card-content-effect"></div>

      <div class="flex flex-col h-full">
         <h3
            id="course-<%= course.id %>-title"
            class="text-lg font-bold text-green-700 truncate mb-3"
         >
            <%= course.name %>
         </h3>

         <div class="flex-1 overflow-hidden mb-4">
            <p class="text-sm text-green-700 opacity-0 transition-opacity duration-500 group-hover:opacity-100 group-hover:delay-200 h-full leading-relaxed">
               <%= course.description %>
            </p>
         </div>

         <div class="mt-auto transform transition-all">
            <%= link_to t('buttons.details'), '#',
                        class: 'btn-primary opacity-0 transition-opacity duration-500 group-hover:opacity-100 group-hover:delay-200 w-full' %>
         </div>
      </div>
   </div>
</article>