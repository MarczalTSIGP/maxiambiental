<div class="max-w-sm rounded overflow-hidden shadow-lg group relative">
   <%= link_to course_path(course) do %>

      <div class="relative">
         <%= image_tag course.image_url, alt: course.name, class: 'w-full' %>

         <div class="absolute inset-0 bg-black bg-opacity-70 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col p-4 overflow-y-auto scrollbar-hide scroll-smooth">
            <div class="prose prose-invert text-sm leading-snug [&_p]:my-1 pb-6 relative flex-1">
               <%= course.description %>
            </div>
         </div>
      </div>

      <div class="px-6 py-4">
         <div class="font-bold text-xl mb-2"><%= course.name %></div>
      </div>
   <% end %>
</div>