<% provide(:title, @course.name) %>

<div class="container mx-auto px-4 py-8 mt-16">

   <div class="bg-white rounded-2xl shadow-md border border-gray-100 overflow-hidden mb-12">
      <div class="grid md:grid-cols-2 gap-0">

         <div class="p-8 flex items-center justify-center">
            <%= image_tag @course.image_url, 
            alt: @course.name, 
            class: 'w-full max-w-md rounded-xl shadow-inner object-cover' %>
         </div>

         <div class="p-8">
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
               <%= @course.name %>
            </h1>

            <div class="prose max-w-none text-gray-600 mb-6">
               <%= @course.description %>
            </div>

            <div class="mt-6 pt-6 border-t border-gray-100">
               <h3 class="text-lg font-semibold text-gray-800 mb-3">Detalhes do Curso</h3>
               <div class="grid grid-cols-2 gap-4">
                  <div class="flex items-start">
                     <div class="bg-green-50 p-2 rounded-lg mr-3">
                        <%= icon('fa-solid', 'school', class: 'fa-lg text-green-700') %>
                     </div>
                     <div>
                        <p class="text-sm text-gray-500">Turmas</p>
                        <p class="font-medium"><%= @course.course_classes.count %></p>
                     </div>
                  </div>

                  <div class="flex items-start">
                     <div class="bg-green-50 p-2 rounded-lg mr-3">
                        <%= icon('fa-solid', 'certificate', class: 'fa-lg text-green-700') %>
                     </div>
                     <div>
                        <p class="text-sm text-gray-500">Certificado</p>
                        <p class="font-medium">Incluso</p>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>

   <%= render 'courses/partials/carousel' %>

</div>