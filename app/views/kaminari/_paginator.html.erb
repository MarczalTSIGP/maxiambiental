<%= paginator.render do -%>
   <nav class="flex items-center justify-between lg:justify-end gap-1 lg:gap-2.5 mt-5 overflow-x-auto whitespace-nowrap" role="navigation" aria-label="pager">
      <%= prev_page_tag %>
      <% each_page do |page| -%>
         <% if page.display_tag? -%>
            <%= page_tag page %>
         <% elsif !page.was_truncated? -%>
            <%= gap_tag %>
         <% end -%>
      <% end -%>
      <% unless current_page.out_of_range? %>
         <%= next_page_tag %>
      <% end %>
   </nav>
<% end -%>