<%= rc 'page/content_title', title: 'Formulário de inscrição', description: @course_class.name %>

<div class="max-w-4xl mx-auto p-4">
   <!-- Stepper -->
   <div class="mb-8">
      <ol class="flex items-center justify-center w-full p-3 space-x-2 text-sm font-medium text-center text-gray-500 bg-white sm:text-base sm:p-4 sm:space-x-4 rtl:space-x-reverse">
         <!-- Etapa 1 (Ativa) -->
         <li class="flex items-center <%= 'text-green-700' if current_step == 1 %>">
            <span class="flex items-center justify-center w-5 h-5 me-2 text-xs border <%= current_step == 1 ? 'border-green-700' : 'border-gray-500' %> rounded-full shrink-0">
               1
            </span>
            Dados Pessoais
            <svg class="w-3 h-3 ms-2 sm:ms-4 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 12 10">
               <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m7 9 4-4-4-4M1 9l4-4-4-4"/>
            </svg>
         </li>

         <!-- Etapa 2 -->
         <li class="flex items-center <%= 'text-green-700' if current_step == 2 %>">
            <span class="flex items-center justify-center w-5 h-5 me-2 text-xs border <%= current_step == 2 ? 'border-green-700' : 'border-gray-500' %> rounded-full shrink-0">
               2
            </span>
            Dados do curso
            <svg class="w-3 h-3 ms-2 sm:ms-4 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 12 10">
               <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m7 9 4-4-4-4M1 9l4-4-4-4"/>
            </svg>
         </li>

         <!-- Etapa 3 -->
         <li class="flex items-center <%= 'text-green-700' if current_step == 3 %>">
            <span class="flex items-center justify-center w-5 h-5 me-2 text-xs border <%= current_step == 3 ? 'border-green-700' : 'border-gray-500' %> rounded-full shrink-0">
               3
            </span>
            Pagamento
            <svg class="w-3 h-3 ms-2 sm:ms-4 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 12 10">
               <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m7 9 4-4-4-4M1 9l4-4-4-4"/>
            </svg>
         </li>

         <!-- Etapa 4 -->
         <li class="flex items-center <%= 'text-green-700' if current_step == 4 %>">
            <span class="flex items-center justify-center w-5 h-5 me-2 text-xs border <%= current_step == 4 ? 'border-green-700' : 'border-gray-500' %> rounded-full shrink-0">
               4
            </span>
            Confirmação
         </li>
      </ol>
   </div>

   <!-- Container do Formulário -->
   <div class="bg-white rounded-lg shadow-lg p-6 sm:p-8">
      <div class="max-w-2xl mx-auto">
         <%= yield %>
      </div>
   </div>
</div>