<%= render 'clients/enrollments/partials/steps' do %>
   <%= simple_form_for @client, url: clients_update_client_path, html: { class: "space-y-4 md:space-y-6" } do |f| %>

      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :phone %>
      <%= f.input :cep %>
      <%= f.input :city %>
      <%= f.input :state %>

      <div class="flex justify-between mt-7">
         <%= link_to t('buttons.cancel'), root_path, class: 'btn-outline' %>
         <%= f.button :submit %>
      </div>

   <% end %>
<% end %>