<% provide(:head_title, t('devise.sessions.sign_in')) %>

<%= render(Alert::AlertComponent.new(type: :error, message: flash[:alert])) if flash[:alert].present? %>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4 md:space-y-6" }) do |f| %>
  <%= f.input :email, placeholder: "Email", input_html: { class: input_class }, error: true %>
  <%= f.input :password, placeholder: "Senha", input_html: { class: input_class }, error: true %>

  <%= f.button :submit, "Entrar", class: button_class("bg-green-700 text-white") %>
<% end %>
