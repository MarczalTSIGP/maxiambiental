<% provide(:head_title, "Cadastrar") %>
<% provide(:title, "Cadastrar") %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4 md:space-y-6" }) do |f| %>
  <%= f.input :email, placeholder: t('simple_form.labels.email'), error: true %>
  <%= f.input :password, placeholder: t('simple_form.labels.password'), error: true %>
  <%= f.input :password_confirmation, placeholder: t('simple_form.labels.password_confirmation'), error: true %>

  <%= f.button :submit, t('register') %>
<% end %>
  
<%= render 'layouts/devise/partials/google_button' %>