<% provide(:head_title, "Cadastrar") %>
<% provide(:title, "Cadastrar") %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.email_field :email, placeholder: "Email", class: input_class %>
  <%= f.password_field :password, placeholder: "Senha", class: input_class %>
  <%= f.password_field :password_confirmation, placeholder: "Confirmar Senha", class: input_class %>

  <%= f.submit "Cadastrar", class: button_class("bg-green-700 text-white mt-5") %>
  <%= render 'layouts/devise/partials/google_button' %>
<% end %>
