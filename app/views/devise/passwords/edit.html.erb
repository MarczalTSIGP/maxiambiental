<% provide(:head_title, "Redefinir Senha") %>
<% provide(:title, "Redefinir Senha") %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.password_field :password, placeholder: "Nova Senha", class: input_class %>
  <%= f.password_field :password_confirmation, placeholder: "Confirmar Nova Senha", class: input_class %>

  <%= f.submit "Redefinir", class: button_class("bg-green-700 text-white mt-5") %>
<% end %>

<%= render "devise/shared/links" %>
