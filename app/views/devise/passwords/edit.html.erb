<% provide(:head_title, t('redefine_password')) %>

<%= render(Alert::AlertComponent.new(type: :success, message: flash[:notice])) if flash[:notice].present? %>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "space-y-4 md:space-y-6" }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.input :password, placeholder: t('simple_form.labels.password') %>
  <%= f.input :password_confirmation, placeholder: t('simple_form.labels.password_confirmation') %>

  <%= f.button :submit, t('redefine_password') %>
<% end %>

<%= render "devise/shared/links" %>
