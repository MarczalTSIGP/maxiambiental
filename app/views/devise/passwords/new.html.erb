<% provide(:head_title, t('redefine_password')) %>

<%= render(Alert::AlertComponent.new(type: :success, message: flash[:notice])) if flash[:notice].present? %>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
  <%= f.input :email, placeholder: t('simple_form.labels.email'), error: true %>

  <%= f.button :submit, t('send'), class: "bg-green-700 text-white mt-5 cursor-pointer" %>
<% end %>

<%= render "devise/shared/links" %>
