<% provide(:head_title, "Redefinir Senha") %>
<% provide(:title, "Redefinir Senha") %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.email_field :email, placeholder: "Email", class: input_class %>
  <p class="text-sm text-red-700 m-1"><%= resource.errors[:email].first %></p>

  <%= f.submit "Enviar", class: button_class("bg-green-700 text-white mt-5") %>
<% end %>

