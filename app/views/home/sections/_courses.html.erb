<div class="box-border flex flex-col items-center justify-center min-h-screen bg-green-700 px-4 py-8" data-controller="carousel">

   <!-- Section Header -->
   <div class="text-center mb-8 md:mb-12 max-w-3xl mx-auto">

      <h1 class="text-2xl md:text-4xl font-bold text-white mb-2"><%= t('home.courses.title') %></h1>

      <p class="text-sm md:text-lg text-white/90"><%= t('home.courses.subtitle') %></p>

   </div>

   <!-- Card Carousel -->
   <div class="card-wrapper relative w-full max-w-7xl">

      <button class="carousel-prev absolute -left-1 md:-left-4 top-1/2 -translate-y-1/2 z-20 btn-rounded"
              data-carousel-target="prevButton"
              data-action="click->carousel#prev">
         <%= icon('fa-solid', 'arrow-left')%>
      </button>

      <button class="carousel-next absolute -right-1 md:-right-4 top-1/2 -translate-y-1/2 z-20 btn-rounded"
              data-carousel-target="nextButton"
              data-action="click->carousel#next">
         <%= icon('fa-solid', 'arrow-right')%>
      </button>

      <ul data-carousel-target="carousel" data-action="touchstart->carousel#handleTouchStart touchend->carousel#handleTouchEnd"
         class="card-list scrollbar-hide flex overflow-x-auto snap-x snap-mandatory scroll-smooth gap-4 md:gap-6 pb-4 scrollbar-hide">

         <% if @courses.present? %>
            <%= render partial: 'home/sections/courses/course', collection: @courses, as: :course %>
         <% else %>
            <%= render partial: 'home/sections/courses/no_results' %>
         <% end %>

      </ul>
   </div>
</div>