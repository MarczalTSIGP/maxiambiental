<div data-navbar-visibility-target="menu" class="navbar-menu hidden relative z-50">

   <div class="fixed inset-0 bg-gray-800 opacity-25"></div>

   <aside class="fixed top-0 left-0 bottom-0 flex flex-col w-5/6 max-w-sm py-6 px-6 bg-white border-r overflow-y-auto">

      <div class="flex items-center mb-8">
         <%= link_to image_tag('maxiambiental-logo.svg', alt: 'Logo', class: 'h-16'), root_path, class: "mr-auto text-3xl font-bold leading-none" %>

         <button data-action="click->navbar-visibility#toggleMenu">
            <%= icon('fa-solid', 'xmark', class: "text-green-700") %>
         </button>
      </div>

      <div>
         <ul>
            <% links = [
          { text: t('links.courses'), url: courses_path },
          { text: t('links.classes'), url: course_classes_path },
          { text: t('links.photos_gallery'), url: "#" },
          { text: t('links.about_us'), url: "#" },
          { text: t('links.contact_us'), url: "#" },
        ] %>

            <% links.each do |link| %>
               <li class="mb-1">
                  <%= link_to link[:text], link[:url], class: "block p-4 text-sm font-semibold text-green-700 hover:bg-green-50 hover:text-green-600 rounded" %>
               </li>
            <% end %>
         </ul>
      </div>

      <div class="mt-auto">

         <% unless client_signed_in? %>
            <div class="pt-6">
               <%= link_to t('devise.sessions.sign_in'), new_client_session_path,
                      class: "block px-4 py-3 mb-3 leading-loose text-xs text-center font-semibold bg-gray-50 hover:bg-gray-100 rounded-xl" %>

               <%= link_to t('devise.sessions.sign_up'), new_client_registration_path,
                      class: "block px-4 py-3 mb-2 leading-loose text-xs text-center text-white font-semibold bg-green-600 hover:bg-green-700 rounded-xl" %>
            </div>
         <% end %>

         <p class="my-4 text-xs text-center text-gray-400">
            <span>Copyright Â© 2024</span>
         </p>

      </div>
   </aside>
</div>