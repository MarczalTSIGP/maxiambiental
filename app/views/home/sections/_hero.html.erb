<div id="hero-section" class="relative w-full bg-gradient-to-r text-white overflow-hidden h-screen">

   <div class="absolute inset-0">
      <%= image_tag 'hero.png', alt: 'Background Image', class: "object-cover object-center w-full h-full" %>
      <div class="absolute inset-0 bg-black opacity-50"></div>
   </div>

   <div class="relative z-0 flex flex-col justify-center lg:items-start h-full text-left lg:p-16 p-2">

      <h1 class="md:text-5xl text-4xl font-bold leading-tight mb-4">
         <%= t('home.title')%>
      </h1>

      <h2 class="md:text-3xl text-2xl w-96 text-gray-300 font-semibold mb-8">
         <%= t('home.subtitle')%>
      </h2>

      <div class="flex text-center">
         <%= link_to t('links.discover_more'), "#", class: "bg-green-700 max-w-36 text-center text-white hover:bg-green-300 py-2 px-6 rounded-md text-md" %>
         <%= link_to t('links.explore_our_courses'), courses_path, class: "text-center text-white py-2 px-6 text-md" %>
      </div>

   </div>
</div>
