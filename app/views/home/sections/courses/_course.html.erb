<li class="flex-shrink-0 w-[calc(100vw-100px)] sm:w-80 md:w-96 snap-center block bg-white p-4 md:p-5 rounded-lg space-y-3 md:space-y-4 transition duration-200 mx-2">

   <%= link_to image_tag(course.image_url, alt: course.name, class: "aspect-video object-cover rounded-lg"), 
               course_path(course), class: "card-link" %>

   <span class="badge bg-gray-500 text-white">Presencial</span>

   <h2 class="text-base md:text-lg font-bold"><%= course.name %></h2>

   <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
      <%= link_to t('buttons.schedule'), course_path(course), class: "btn-outline w-full sm:w-auto text-sm flex-grow text-center" %>
      <%= link_to t('buttons.subscribe'), course_path(course), class: "btn-primary w-full sm:w-auto text-sm flex-grow text-center" %>
   </div>
</li>