<% provide(:head_title, t('devise.sessions.sign_in')) %>

<%= simple_form_for resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4 md:space-y-6" } do |f| %>

   <%= f.input :email %>
   <%= f.input :password %>

   <%= link_to t('devise.sessions.forgot_password.title'), new_password_path(resource_name), class: "flex justify-end text-sm font-light text-gray-600" %>

   <%= f.button :submit, t('devise.sessions.sign_in'), class: "w-full" %>
<% end %>
