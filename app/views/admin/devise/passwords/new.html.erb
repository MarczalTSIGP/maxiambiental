<% provide(:head_title, t('devise.sessions.forgot_password.title')) %>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "space-y-4 md:space-y-6" }) do |f| %>
   <%= f.input :email %>

   <%= f.button :submit, t('devise.sessions.forgot_password.button'), class: "w-full" %>
<% end %>

<%= render 'admin/devise/passwords/partials/links' %>