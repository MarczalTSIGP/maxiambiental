<% provide(:head_title, t('authentication.reset_password.title')) %>

<%= simple_form_for @admin, url: admin_password_path, html: { class: "space-y-4 md:space-y-6" } do |f| %>

  <%= hidden_field_tag :_method, 'put' %>
  <%= f.hidden_field :reset_password_token %>
  
  <%= f.input :password, placeholder: t('simple_form.labels.password'), error: true %>
  <%= f.input :password_confirmation, placeholder: t('simple_form.labels.password_confirmation'), error: true %>

  <%= f.button :submit, t('authentication.reset_password.title') %>
<% end %>

<%= render 'admin/devise/passwords/partials/links' %>
