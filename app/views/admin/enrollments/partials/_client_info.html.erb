<div>
   <div class="flex items-center mb-4">
      <%= image_tag @enrollment.client.avatar_url, 
                                alt: @enrollment.client.name, 
                                class: "w-12 h-12 rounded-full object-cover border border-gray-200 mr-3" %>

      <div>
         <h3 class="text-lg font-medium text-gray-900">
            <%= link_to @enrollment.client.name, "#", class: "hover:text-green-700" %>
         </h3>
         <p class="text-sm text-gray-500">
            <%= @enrollment.client.email %>
         </p>
      </div>
   </div>

   <div>
      <h2 class="text-lg font-semibold text-gray-700 mb-2"><%= CourseClass.model_name.human %></h2>
      <div class="p-4 bg-gray-50 rounded-lg">
         <%= link_to @enrollment.course_class.name, '#', 
                class: "text-lg font-medium text-gray-800 hover:text-green-700" %>
         <div class="mt-2 text-sm text-gray-600">
            <p><%= l(@enrollment.course_class.start_at, format: :long) %> - <%= l(@enrollment.course_class.end_at, format: :long) %></p>
            <p class="mt-1"><%= @enrollment.course_class.schedule %></p>
         </div>
      </div>
   </div>
</div>