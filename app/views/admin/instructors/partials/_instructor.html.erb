<tr>
   <td class="px-6 py-4 text-sm text-gray-800">
      <div class="flex items-center">
         <%= image_tag instructor.avatar_url, class: "h-8 w-8 rounded-full object-cover"%>
         <div class="ml-4">
            <h2 class="font-semibold"><%= instructor.name %></h2>
            <p class="text-sm text-gray-600"><%= instructor.email %></p>
         </div>
      </div>
   </td>

   <td class="px-6 py-4 text-sm text-gray-800">
      <%= instructor.phone %>
   </td>

   <td class="px-6 py-4 text-sm text-center text-gray-800">
      <span class="<%= instructor.active ? 'badge-active' : 'badge-inactive' %>">
         <%= t("status.instructor.#{instructor.active}") %>
      </span>
   </td>

   <td class="px-6 py-4 text-sm text-center text-gray-800">
      <%= link_to t('.resume'), admin_instructor_path(instructor), class: 'font-medium text-green-700 hover:underline' %>
   </td>

   <td class="px-6 py-4 text-sm font-medium text-center">
      <div class="flex items-center gap-4">

         <%= link_to admin_instructor_path(instructor.id), data: { turbo_method: :delete, turbo_confirm: t('.confirm') } do %>
            <%= icon('fa-solid', 'trash', class: 'fa-lg text-red-700') %>
         <% end %>

         <%= link_to edit_admin_instructor_path(instructor.id) do %>
            <%= icon('fa-solid', 'pen', class: 'fa-lg text-green-700') %>
         <% end %>

      </div>
   </td>
</tr>