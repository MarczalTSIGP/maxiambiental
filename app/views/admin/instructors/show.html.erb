<div class="container mx-auto">
   <div class="grid grid-cols-4 sm:grid-cols-12 gap-6 px-4">

      <div class="col-span-4 sm:col-span-3">
         <div class="bg-white shadow rounded-lg p-6">

            <div class="flex flex-col items-center">
               <%= image_tag 'default-avatar.png', class: "w-32 h-32 bg-gray-300 rounded-full mb-4 shrink-0", alt: "cover-image" %>
               <h1 class="text-xl font-bold"><%= @instructor.name %></h1>
               <p class="text-gray-700">Instrutor</p>
            </div>

            <hr class="my-6 border-t border-gray-300">

            <div class="flex flex-col">
               <span class="text-gray-700 uppercase font-bold tracking-wider mb-2">Contato</span>
               <div>
                  <div class="flex items-center my-1">
                     <%= icon('fa-solid', 'envelope', class: "w-5 h-5 text-green-700 transition duration-75") %>
                     <div class="ml-2 truncate"><%= @instructor.email %></div>
                  </div>
                  <div class="flex items-center my-1">
                     <%= icon('fa-solid', 'phone', class: "w-5 h-5 text-green-700 transition duration-75") %>
                     <div><%= @instructor.phone %></div>
                  </div>
               </div>
            </div>
            
         </div>
      </div>

      <div class="col-span-4 sm:col-span-9">
         <div class="bg-white shadow rounded-lg p-6">
            <%= @instructor.resume %>
         </div>
      </div>
   </div>
</div>