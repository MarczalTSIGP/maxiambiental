<% provide(:title, t(".title")) %>

<%= rc 'page/content_title',
       title: t('.title'),
       description: t('.description'),
       bt_label: t('.new'),
       bt_path: new_admin_instructor_path %>

<%= rc 'search/form', base_url: admin_instructors_path %>

<% attributes = [
   { text: Instructor.model_name.human, class: 'text-left' },
   { text: Instructor.human_attribute_name(:phone), class: 'text-left' },
   { text: Instructor.human_attribute_name(:status), class: 'text-center' },
   { text: Instructor.human_attribute_name(:resume), class: 'text-center' },
   { text: '', class: 'text-right' }
] %>

<%= rc 'data/table', attributes: attributes, 
                     collection: @instructors, 
                     partial: 'admin/instructors/partials/instructor' %>