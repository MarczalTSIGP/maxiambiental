<%= rc 'page/content_title',
       title: t('.title'),
       description: t('.description'),
       bt_label: t('.new'),
       bt_path: new_admin_instructor_path %>

<%= rc 'search/form', base_url: admin_instructors_search_path, clean_url: admin_instructors_path %>

<% attributes = [
   { text: t('activerecord.models.instructor'), class: 'text-left' },
   { text: t('activerecord.attributes.defaults.phone'), class: 'text-left' },
   { text: t('activerecord.attributes.defaults.status'), class: 'text-center' },
   { text: t('activerecord.attributes.defaults.resume'), class: 'text-center' },
   { text: '', class: 'text-right' }
] %>

<%= rc 'data/table', attributes: attributes, 
                     collection: @instructors, 
                     partial: 'admin/instructors/partials/instructor' %>
