<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
   <!-- Cabeçalho -->
   <div class="bg-green-700 rounded-lg shadow-md p-6 mb-8">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center">
         <div>
            <h1 class="text-3xl font-bold text-white"><%= @course_class.name %></h1>
            <p class="text-green-100 mt-2">
               <%= @course_class.course.name %> - <%= @course_class.instructor.name %>
            </p>
         </div>
         <div class="mt-4 md:mt-0 bg-white text-green-700 px-4 py-2 rounded-md font-semibold">
            <%= @course_class.start_at.strftime("%d/%m/%Y") %> à <%= @course_class.end_at.strftime("%d/%m/%Y") %>
         </div>
      </div>
   </div>

   <!-- Seções em coluna única -->
   <div class="space-y-8">
      <!-- Sobre -->
      <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
         <h2 class="text-2xl font-semibold text-green-700 mb-4">Sobre o Curso</h2>
         <div class="prose max-w-none">
            <%= @course_class.about %>
         </div>
      </div>

      <!-- Informações práticas -->
      <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
         <h2 class="text-2xl font-semibold text-green-700 mb-4">Informações</h2>
         <div class="space-y-4">
            <div>
               <p class="text-sm text-gray-500">Horário</p>
               <p class="font-medium"><%= @course_class.schedule %></p>
            </div>
            <div>
               <p class="text-sm text-gray-500">Local</p>
               <p class="font-medium"><%= @course_class.address %></p>
            </div>
         </div>
      </div>

      <!-- Programação -->
      <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
         <h2 class="text-2xl font-semibold text-green-700 mb-4">Programação</h2>
         <div class="prose max-w-none">
            <%= @course_class.programming %>
         </div>
      </div>

      <!-- Pagamento -->
      <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
         <h2 class="text-2xl font-semibold text-green-700 mb-4">Pagamento</h2>
         <div class="prose max-w-none">
            <%= @course_class.payments_info %>
         </div>
      </div>

   </div>
</div>