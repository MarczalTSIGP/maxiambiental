<div class="bg-white p-4 rounded-md mt-4 shadow-xl">
   <h2 class="text-gray-500 text-lg font-semibold pb-4">Top <%= collection.model.model_name.human.pluralize %></h2>
   <div class="my-1"></div>
   <!-- Espacio de separación -->
   <div class="bg-gradient-to-r from-green-300 to-green-500 h-px mb-6"></div>
   <!-- Línea con gradiente -->
   <table class="w-full table-auto text-sm">
      <thead>
         <tr class="text-sm text-left leading-normal">
            <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-gray-200"><%= collection.model.model_name.human %></th>
         </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
         <%= yield %>
      </tbody>
   </table>
</div>