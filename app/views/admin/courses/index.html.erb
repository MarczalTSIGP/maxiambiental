<% provide(:title, t(".title")) %>

<%= rc 'page/content_title',
       title: t('.title'),
       description: t('.description'),
       bt_label: t('.new'),
       bt_path: new_admin_course_path %>

<%= rc 'search/form', base_url: admin_courses_path %>

<% attributes = [
   { text: Course.model_name.human, class: 'w-full text-left' },
   { text: Course.human_attribute_name(:active), class: 'text-center' }, 
   { text: '', class: 'text-right' }
] %>

<%= rc 'data/table', attributes: attributes, 
                     collection: @courses,
                     partial: 'admin/courses/partials/course' %>
