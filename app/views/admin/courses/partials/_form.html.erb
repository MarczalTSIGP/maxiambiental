<%= simple_form_for [:admin, @course], 
                    html: { class: "space-y-4 md:space-y-6" } do |f| %>

   <%= f.input :name %>

   <%= f.input :description, as: :text, input_html: { class: 'h-40 overflow-y-auto' } %>

   <%= f.input :image, as: :image %>

   <%= yield(f) %>

   <div class="flex justify-between">
      <%= link_to 'Cancelar', admin_courses_path, class: 'btn-outline' %>
      <%= f.button :submit, class: 'w-fit' %>
   </div>
<% end %>