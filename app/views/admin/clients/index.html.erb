<% provide(:title, t(".title")) %>

<%= rc 'page/content_title',
       title: t('.title'),
       description: t('.description'),
       bt_label: t('.new'),
       bt_path: new_admin_client_path %>

<%= rc 'search/form', base_url: admin_clients_path %>

<% attributes = [
   { text: Client.model_name.human, class: 'text-left w-full' },
   { text: Client.human_attribute_name(:status), class: 'text-center' },
   { text: '', class: 'text-right' }
] %>

<%= rc 'data/table', attributes: attributes, 
                     collection: @clients,
                     partial: 'admin/clients/partials/client' %>
