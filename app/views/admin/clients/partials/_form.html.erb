<%= simple_form_for [:admin, @client], html: { class: "space-y-4 md:space-y-6" } do |f| %>

   <%= f.input :name %>

   <%= f.input :email %>

   <%= yield(f) %>

   <div class="flex justify-between mt-7">
      <%= link_to t('buttons.cancel'), admin_clients_path, class: 'btn-outline' %>
      <%= f.button :submit %>
   </div>

<% end %>