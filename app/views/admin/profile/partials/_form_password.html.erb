<div class="w-full pb-8 mt-8 rounded-lg space-y-4 md:space-y-6">

   <%= simple_form_for @admin, url: admin_profile_path, method: :patch, class: "grid gap-6 max-w-2xl mx-auto mt-0" do |f| %>
      <%= f.input :current_password, placeholder: t('activerecord.attributes.admin.current_password') %>
      <%= f.input :password, placeholder: t('activerecord.attributes.admin.new_password') %>
      <%= f.input :password_confirmation, placeholder: t('activerecord.attributes.admin.new_password_confirmation') %>

      <%= f.button :submit, t('buttons.change_password') %>
   <% end %>

</div>