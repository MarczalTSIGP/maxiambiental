<div class="w-full pb-8 mt-8 rounded-lg space-y-4 md:space-y-6">

   <%= simple_form_for @admin, namespace: :update_data, url: admin_update_profile_path, method: :patch, class: "grid gap-6 max-w-2xl mx-auto mt-0" do |f| %>

      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :current_password %>

      <%= f.button :submit, t('buttons.save') %>
   <% end %>

</div>