<section class="relative pt-40 pb-24 z-10">

   <%= image_tag 'bg-profile.png', alt: "cover-image", class: "bg-green-700 w-full absolute top-0 left-0 z-0 h-60" %>

   <div class="w-full max-w-7xl mx-auto px-6 md:px-8">
      <div class="flex items-center justify-center sm:justify-start relative z-10 mb-5">

         <%= render 'admin/profile/partials/form_image' %>

      </div>

      <div class="flex flex-col sm:flex-row max-sm:gap-5 items-center justify-between mb-5">
         <div class="block">
            <h3 class="font-manrope font-bold text-4xl text-gray-900 mb-1"><%= current_admin.name %></h3>
            <p class="font-normal text-base leading-7 text-gray-500">Guarapuava, ParanÃ¡</p>
         </div>

         <button class="rounded-full py-3.5 px-5 bg-gray-100 flex items-center group transition-all duration-500 hover:bg-green-100">
            <%= icon('fa-solid', 'user-tie', class: "w-5 h-5 text-green-500 transition duration-75 dark:text-green-700") %>
            <span class="px-2 font-medium text-base leading-7 text-gray-700 transition-all duration-500 group-hover:text-green-600">Administrador</span>
         </button>

      </div>

      <!-- tabs -->
      <%= rc 'navigation/tabs', tabs: [
            { name: t('profile.edit_profile'), path: admin_edit_profile_path },
            { name: t('profile.edit_password'), path: admin_edit_password_path },
         ] 
      %>

      <turbo-frame id="admin_update">
         <%= yield %>
      </turbo-frame>

   </div>
</section>