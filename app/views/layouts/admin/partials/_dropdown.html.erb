<div class="flex items-center md:order-2 space-x-3 rtl:space-x-reverse">
   <%= button_tag id: 'dropdownAvatarNameButton',
                  data: { action: 'click->dropdown#toggle' },
                  class: 'flex items-center text-sm pe-1 font-medium text-green-900 rounded-full hover:text-green-700',
                  type: 'button' do %>
      <span class="sr-only">Open user menu</span>
      <%= image_tag(user.avatar_url, alt: user.name, class: 'w-8 h-8 me-2 rounded-full object-cover') %>
      <%= user.name %>
      <%= icon('fa-solid', 'chevron-down', class: "w-2.5 h-4 ms-3") %>
   <% end %>
</div>

<div 
   data-dropdown-target="menu" 
   class="absolute right-8 top-14 z-50 hidden my-4 bg-gray-50 border border-gray-200 rounded-lg shadow-xl divide-y divide-gray-200"
>
   <!-- User info -->
   <div class="px-4 py-3">
      <span class="block text-sm text-green-800"><%= user.name %></span>
      <span class="block text-sm truncate text-gray-500"><%= user.email %></span>
   </div>

   <!-- Menu links -->
   <ul class="py-2" aria-labelledby="user-menu-button">
      <li>
         <%= link_to 'Perfil', admin_edit_profile_path, 
                     class: "block px-4 py-2 text-sm text-green-800 hover:bg-green-200" %>
      </li>
      <li>
         <%= link_to t('devise.sessions.sign_out'), 
                     destroy_admin_session_path, 
                     data: { turbo_method: :delete },
                     class: "block px-4 py-2 text-sm text-red-700 hover:bg-red-100" %>
      </li>
   </ul>
</div>
