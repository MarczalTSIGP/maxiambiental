<!-- Basic Meta Tags -->
<meta name="title" content="<%= t('app.name') %>">
<meta name="description" content="<%= t('app.description') %>">

<!-- Open Graph Meta Tags -->
<meta property="og:title" content="<%= t('app.name') %>">
<meta property="og:description" content="<%= t('app.description') %>">
<meta property="og:image" content="https://mdbcdn.b-cdn.net/img/new/slides/041.webp">
<meta property="og:url" content="<%= root_url %>">
<meta property="og:type" content="website">

<!-- Twitter Card Meta Tags (optional for Twitter sharing) -->
<meta name="twitter:card" content="https://mdbcdn.b-cdn.net/img/new/slides/041.webp">
<meta name="twitter:title" content="<%= t('app.name') %>">
<meta name="twitter:description" content="<%= t('app.description') %>">
<meta name="twitter:image" content="https://mdbcdn.b-cdn.net/img/new/slides/041.webp">